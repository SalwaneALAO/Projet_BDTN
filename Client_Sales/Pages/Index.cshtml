 <video autoplay loop muted playsinline id="myVideo">
<source src="./videogame.mp4" type="video/mp4">
        Your browser does not support the video tag.
</video>

<script>
    document.getElementById('myVideo').addEventListener('play', function() {
    var text = "Bienvenue sur API_Sales le site par excellence de consultation de vos ventes de jeux vidéos"; // Le texte à animer
    var index = 0; // Position de départ dans la chaîne de caractères
    var videoText = document.getElementById('videoText');
    videoText.innerText = " "; // S'assurer que le conteneur est vide

    function typeWriter() {
        if (index < text.length) {
            videoText.innerText += text.charAt(index);
            index++;
            setTimeout(typeWriter, 150); // Ajustez la vitesse de frappe ici
        }
    }

    typeWriter(); // Démarrer l'animation

});

</script>
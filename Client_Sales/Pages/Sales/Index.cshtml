@model Client_Sales.Pages.Sales.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Sales Details</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Sale[0].Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sale[0].UnitsSold)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sale[0].ConsoleId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Sale) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitsSold)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConsoleId)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.SaleId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.SaleId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.SaleId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
